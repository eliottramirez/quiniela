<section class="section">
  <div class="container is-max-desktop">
    <nav class="breadcrumb" aria-label="breadcrumbs">
      <ul>
        <li>
          <span class="icon-text">
            <%= link_to parties_path do %>
              <%= render "heroicons/home", style: :outline, size: :small %>
              <span>Mis Grupos</span>
            <% end %>
          </span>
        </li>
        <li><%= link_to @party.name, party_path(@party) %></li>
        <li class="is-active"><%= link_to "Editar", party_path(@party), "aria-current" => "page" %></li>
      </ul>
    </nav>

    <h1 class="title"><%= "Editar Grupo \"#{@party.name}\"" %></h1>

    <%= render "form", party: @party, verb: "Editar" %>

  </div>
</section>
