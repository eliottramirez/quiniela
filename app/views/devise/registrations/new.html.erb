<section class="section">
  <div class="container is-max-desktop">
    <h1 class="title">Crear cuenta</h1>
    <div class="box">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label "Nombre", class: "label" %>
          <div class="control">
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "input" %>
          </div>
        </div>

        <div class="field">
          <%= f.label "Email", class: "label" %>
          <div class="control">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
          </div>
        </div>

        <div class="field">
          <%= f.label "Contraseña", class: "label" %>
          <div class="control">
            <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
            <% if @minimum_password_length %>
              <p class="help">(<%= @minimum_password_length %> carácteres mínimo)</p>
            <% end %>
          </div>
        </div>

        <div class="field">
          <%= f.label "Confirmar contraseña", class: "label" %>
          <div class="control">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.submit "Crear cuenta", class: "button is-primary" %>
          </div>
        </div>
      <% end %>
    </div>

    <hr>

    <div class="field mt-3">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</section>
