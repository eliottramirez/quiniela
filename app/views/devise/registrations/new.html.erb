<section class="section">
  <div class="container is-max-desktop">
    <h1 class="title">Crear cuenta</h1>
    <div class="box">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :name, class: "label" do %>
            <%= "Nombre" %>
            <span class="has-text-danger">*</span>
          <% end %>
          <div class="control">
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "input" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :avatar, class: "label" do %>
            <%= "Avatar" %>
          <% end %>
          <%= f.file_field :avatar %>
        </div>

        <div class="field">
          <%= f.label :email, class: "label" do %>
            <%= "Email" %>
            <span class="has-text-danger">*</span>
          <% end %>
          <div class="control">
            <%= f.email_field :email, autocomplete: "email", class: "input" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :email_confirmation, class: "label" do %>
            <%= "Confirmar Email" %>
            <span class="has-text-danger">*</span>
          <% end %>
          <div class="control">
            <%= f.email_field :email_confirmation, autocomplete: "email", class: "input" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :password, class: "label" do %>
            <%= "Contraseña" %>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
          <% if @minimum_password_length %>
            <p class="help"><%= "#{@minimum_password_length} carácteres mínimo." %></p>
          <% end %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, class: "label" do %>
            <%= "Confirmar contraseña" %>
          <% end %>
          <div class="control">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.submit "Crear cuenta", class: "button is-primary" %>
          </div>
        </div>
      <% end %>
    </div>

    <hr>

    <div class="field mt-3">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</section>
