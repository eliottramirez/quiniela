<section class="section">
  <div class="container is-max-desktop">
    <% if notice.present? %>
      <div class="notification is-primary is-light">
        <%# <button class="delete"></button> %>
        <%= notice %>
      </div>
    <% end %>

    <nav class="breadcrumb" aria-label="breadcrumbs">
      <ul>
        <li><%= link_to "Quinielas", pools_path %></li>
        <li class="is-active"><a href="#" aria-current="page"><%= "Quiniela #{@pool.id}" %></a></li>
      </ul>
    </nav>

    <div class="columns is-vcentered is-gapless is-mobile">
      <div class="column is-narrow mr-3">
        <h1 class="title"><%= "Quiniela #{@pool.id}" %></h1>
      </div>

      <div class="column is-narrow">
        <%= link_to edit_pool_path(@pool) , class: "button is-link is-inverted" do %>
          <%= render 'heroicons/pencil_outline' %>
        <% end %>
      </div>

      <div class="column is-narrow">
        <%= button_to @pool, method: :delete, class: "button is-inverted is-danger" do %>
          <%= render 'heroicons/trash_outline' %>
        <% end %>
      </div>
    </div>

    <%= render @pool %>

  </div>

  <div class="container is-max-desktop mt-6">
    <%= link_to "Back to pools", pools_path %>
  </div>
</section>
